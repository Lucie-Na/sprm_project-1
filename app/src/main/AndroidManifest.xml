<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.sprm_project">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SPRM_Project"
        android:usesCleartextTraffic="true">
        <activity android:name="ui.AddTravelActivity"></activity>
        <activity android:name="profileController.EditProfile" />
        <activity
            android:name="ui.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/Theme.SPRM_Project.NoActionBar" />
        <activity android:name="ui.SignInActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="profileController.Profile" />
    </application>

</manifest>